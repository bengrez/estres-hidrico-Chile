{
  "name": "estres-hidrico-chile",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.8",
  "scripts": {
    "dev": "concurrently \"cd apps/api && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000\" \"pnpm -C apps/web dev\"",
    "lint": "pnpm -C apps/web lint",
    "test:web": "pnpm -C apps/web test",
    "test:api": "cd apps/api && pytest",
    "test": "pnpm test:web && pnpm test:api",
    "build": "pnpm -C apps/web build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
